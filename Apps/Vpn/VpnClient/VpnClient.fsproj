<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <Platforms>x64</Platforms>
        <AssemblyName>VpnClient</AssemblyName>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
        <PlatformTarget>x64</PlatformTarget>
        <DefineConstants>DEBUG</DefineConstants>
        <OtherFlags>--warnaserror+:25 --platform:x64</OtherFlags>
        <NoWarn>NU5100;NU5110;NU5111;NU1903</NoWarn>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
        <PlatformTarget>x64</PlatformTarget>
        <OtherFlags>--warnaserror+:25 --platform:x64</OtherFlags>
        <NoWarn>NU5100;NU5110;NU5111;NU1903</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="Program.fs" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="appsettings.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="log4net.config">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Include="-run.bat">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="..\..\..\Sys\BuildInfo.ps1" Link="BuildInfo.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="..\..\..\Scripts\*.ps1" Link="%(Filename)%(Extension)">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="..\..\..\Vpn\VpnVersionInfo.ps1" Link="MessagingVersionInfo.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="VpnClientName.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="VpnClientFunctions.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="Install-VpnClient.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="Uninstall-VpnClient.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="Start-VpnClient.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="Stop-VpnClient.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="Reinstall-VpnClient.ps1">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="10.0.2" />
        <ProjectReference Include="..\..\..\Vpn\Client\Client.fsproj" />
        <PackageReference Update="FSharp.Core" Version="10.0.102" />
    </ItemGroup>

    <!-- Build + copy VpnClientAdm into this project's output folder WITHOUT referencing it -->
    <PropertyGroup>
        <vpnClientAdmProject>..\VpnClientAdm\VpnClientAdm.fsproj</vpnClientAdmProject>

        <!-- Must match VpnClientAdm.fsproj TargetFramework -->
        <vpnClientAdmTfm>net10.0-windows</vpnClientAdmTfm>

        <vpnClientAdmOutDir>..\VpnClientAdm\bin\$(Platform)\$(Configuration)\$(vpnClientAdmTfm)\</vpnClientAdmOutDir>
    </PropertyGroup>

    <!-- Must run BEFORE VpnClient compiles, but after $(TargetDir) is established -->
    <Target Name="buildAndCopyVpnClientAdm" BeforeTargets="CoreCompile">
        <!-- Build admin app explicitly (no ProjectReference) -->
        <MSBuild Projects="$(vpnClientAdmProject)"
                 Targets="Build"
                 Properties="Configuration=$(Configuration);Platform=$(Platform)" />

        <!-- Ensure VpnClient output folder exists -->
        <MakeDir Directories="$(TargetDir)" />

        <!-- Copy ALL files from VpnClientAdm output folder into VpnClient output folder -->
        <ItemGroup>
            <vpnClientAdmAllFiles Include="$(vpnClientAdmOutDir)**\*.*" />
            <vpnClientAdmDestDirs Include="@(vpnClientAdmAllFiles->'$(TargetDir)%(RecursiveDir)')" />
        </ItemGroup>

        <!-- Ensure subfolders exist (if any) -->
        <MakeDir Directories="@(vpnClientAdmDestDirs)" />

        <Copy SourceFiles="@(vpnClientAdmAllFiles)"
              DestinationFiles="@(vpnClientAdmAllFiles->'$(TargetDir)%(RecursiveDir)%(Filename)%(Extension)')"
              SkipUnchangedFiles="true" />
    </Target>

</Project>
